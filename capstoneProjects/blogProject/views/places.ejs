    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400..700&family=Fira+Code:wght@300..700&family=Noto+Sans:ital,wght@0,100..900;1,100..900&family=Open+Sans:ital,wght@0,300..800;1,300..800&family=PT+Serif+Caption:ital@0;1&family=PT+Serif:ital,wght@0,400;0,700;1,400;1,700&family=Poppins:wght@100&family=Tenor+Sans&family=Whisper&display=swap" rel="stylesheet"> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
    <link href="styles.css" rel="stylesheet" />
</head>
<body style="background-color: gainsboro;">
    <%- include("index.ejs")  %>
    <div class="c2">
        <h1 style="text-align: center;"> places: Exploring Diverse Genres: From Mystery to Memoir</h1>
             <br />
        <%for(var i=0;i<places.length;i++){%>
            <h3> <%=places[i].heading%></h1>
            <p class="pt-serif-regular"> <%=places[i].content%></p>
            <p  style="font-size: small; font-family: dancing-script;" > <%=places[i].author%> <%=places[i].date%></p>
            <br />
            <div style="display: flex; gap:5px;">
                <form action="/places/edit" method="get">
                    <button name="id" type="submit" class="btn  btn-primary" value="<%=i%>">Edit</button>
                </form>
                <form action="/places/delete" method="get">
                    <button name="id" type="submit" class="btn btn-danger" value="<%=i%>">Delete</button>
                </form>
            </div>
            <br />
            <hr />
            <br />
            <br />
        <%}%>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>

</html>