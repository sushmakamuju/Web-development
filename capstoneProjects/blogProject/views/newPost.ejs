    <style>
        *{
            font-family: pt-serif-regular;
        }
        form
        {
            border-radius: 2%;
            margin-top: 10vh;
            margin-bottom: 10vh;
            margin-left: 200px;
            margin-right: 200px;
            background-color: #CAF4FF;
            padding: 50px;
            border: solid 10px #121481;
        }
        input{
            height: 40px;
            width: 1000px;
        }
        textarea{
            width: 1000px;
        }
        button{
            width: 100px;
            height: 30px;
            background-color: #121481;
            color: white;
        }
        .buton
        {
            display: flex;
            justify-content: center;
        }
        body
        {
            background-color: #EEF7FF;
        }
