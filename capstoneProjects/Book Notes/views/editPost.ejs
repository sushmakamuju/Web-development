</head>
<body>
       <!-- creating new post  -->
       <%if(locals.newPost){%>
        <div class="crimson-text-regular  editPage">
            <form method="post" action="/updatePost" >
                <label for="bookName">name:</label>
                <input id="bookName" name="name" value=""/>
        <br />
                <label for="isbn">ISBN:</label>
                <input id="isbn" name="isbn" value=""/>
            <br />
            <label for="trailer">Trailer:</label>
            <textarea class="trailer" id="trailer" name="trailer"></textarea>
            <br />
            <label for="notes">Notes:</label>
            <textarea id="notes" name="notes" class="notes"></textarea>
            
            <br />
                <label for="author">Author:</label>
                <input id="author" name="author" value="" />
            <br />
                <label for="rating">Rating:</label>
                <input id="rating" name="rating" value="" />
        <br />
                <input type="hidden" name="id"value=""/>
                <input type="submit" />
        <input type="hidden" name="typeOfUpdate" value="insert" />
            </form>
            </div>           
         <%}else{%>
    <div class="crimson-text-regular  editPage">
    <form method="post" action="/updatePost" >
        <label for="bookName">name:</label>
        <input id="bookName" name="name" value="<%=book.name%>"/>
<br />
        <label for="isbn">ISBN:</label>
        <input id="isbn" name="isbn" value="<%=book.isbn%>"/>
    <br />
    <label for="trailer">Trailer:</label>
    <textarea class="trailer" id="trailer" name="trailer"><%=book.trailer%></textarea>
    <br />
    <label for="notes">Notes:</label>
    <textarea id="notes" name="notes" class="notes"><%=book.notes%></textarea>
    <br />
        <label for="author">Author:</label>
        <input id="author" name="author" value="<%=book.author%>" />
    <br />
        <label for="rating">Rating:</label>
        <input id="rating" name="rating" value="<%=book.rating%>" />
<br />
        <input type="hidden" name="id"value="<%=book.id %>"/>
        <input type="submit" />
        <input type="hidden" name="typeOfUpdate" value="update" />
    </form>
    </div>
<%}%>
</body>
</html>